<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <StatDef Name="WeightStat">
    <defName>Mass</defName>
    <label>mass</label>
    <description>The physical mass of an object.</description>
    <category>Basics</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0</minValue>
    <toStringStyle>FloatTwo</toStringStyle>
    <formatString>{0} kg</formatString>
    <parts>
      <li Class="StatPart_BodySize" />
      <li Class="StatPart_NaturalNotMissingBodyPartsCoverage" />
      <li Class="StatPart_GearAndInventoryMass" />
    </parts>
  </StatDef>

  <StatDef Name="BulkStat">
    <defName>Bulk</defName>
    <label>bulk</label>
    <description>The amount of inventory space an item takes up when carried in bag or pocket.</description>
    <category>BasicsNonPawn</category>
    <defaultBaseValue>1</defaultBaseValue>
    <minValue>0.001</minValue>
    <toStringStyle>FloatTwo</toStringStyle>
    <displayPriorityInCategory>10</displayPriorityInCategory>
  </StatDef>

</Defs>
