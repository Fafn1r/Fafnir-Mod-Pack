<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!-- Nonlocal injuries -->

  <HediffDef>
	<hediffClass>HediffWithComps</hediffClass>
	<defName>Rad</defName>
	<label>Radiation</label>
	<defaultLabelColor>(0.35, 0.8, 0.35)</defaultLabelColor>
	<lethalSeverity>1</lethalSeverity>
	<makesSickThought>true</makesSickThought>
	<scenarioCanAdd>true</scenarioCanAdd>
	<comps>
	  <li Class="HediffCompProperties_Immunizable">
	  <severityPerDayNotImmune>-0.02</severityPerDayNotImmune>
	  </li>
	</comps>
      <stages>
        <li>
          <label>initial-hidden</label>
	  <everVisible>false</everVisible>
        </li>
        <li>
          <label>minor</label>
          <minSeverity>0.1</minSeverity>
          <painOffset>0.1</painOffset>
            <hediffGivers>
              <li Class="HediffGiver_Random">
                <hediff>Carcinoma</hediff>
                <mtbDays>438</mtbDays>
                <canAffectAnyLivePart>true</canAffectAnyLivePart>
              </li>
            </hediffGivers>
        </li>
        <li>
          <label>moderate</label>
          <minSeverity>0.35</minSeverity>
          <vomitMtbDays>5</vomitMtbDays>
          <painOffset>0.15</painOffset>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>-0.10</offset>
              </li>
            </capMods>
            <hediffGivers>
              <li Class="HediffGiver_Random">
                <hediff>Carcinoma</hediff>
                <mtbDays>111</mtbDays>
                <canAffectAnyLivePart>true</canAffectAnyLivePart>
              </li>
            </hediffGivers>
        </li>
        <li>
          <label>serious</label>
          <minSeverity>0.6</minSeverity>
          <vomitMtbDays>1.5</vomitMtbDays>
          <painOffset>0.25</painOffset>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>-0.20</offset>
              </li>
            </capMods>
            <hediffGivers>
              <li Class="HediffGiver_Random">
                <hediff>Carcinoma</hediff>
                <mtbDays>39</mtbDays>
                <canAffectAnyLivePart>true</canAffectAnyLivePart>
              </li>
            </hediffGivers>
        </li>
        <li>
          <label>extreme</label>
          <minSeverity>0.82</minSeverity>
          <vomitMtbDays>0.5</vomitMtbDays>
          <lifeThreatening>true</lifeThreatening>
          <painOffset>0.60</painOffset>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <offset>-0.50</offset>
              </li>
            </capMods>
            <hediffGivers>
              <li Class="HediffGiver_Random">
                <hediff>Carcinoma</hediff>
                <mtbDays>9</mtbDays>
                <canAffectAnyLivePart>true</canAffectAnyLivePart>
              </li>
            </hediffGivers>
        </li>
        <li>
          <label>deadly</label>
          <minSeverity>0.99</minSeverity>
          <lifeThreatening>true</lifeThreatening>
            <capMods>
              <li>
                <capacity>Consciousness</capacity>
                <setMax>0</setMax>
              </li>
            </capMods>
        </li>
      </stages>
  </HediffDef>

</Defs>
