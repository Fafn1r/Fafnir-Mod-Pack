<?xml version="1.0" encoding="UTF-8"?>
<ResearchProjectDefs>

	<!--=============================== Tier 1 ===================================-->

	<ResearchProjectDef>
		<defName>SimpleProsthetics</defName>
		<label>Simple prosthetics</label>
		<description>Study of anatomy and biomechanics that allows you to build simple prostheses. Old scars and gunshot wounds can now be cured with the help of Glitterworld medicine.</description>
		<baseCost>1500</baseCost>
		<techLevel>Industrial</techLevel>
		<prerequisites>
			<li>MicroelectronicsBasics</li>
		</prerequisites>
		<researchViewX>7</researchViewX>
	</ResearchProjectDef>

	<!--=============================== Tier 2 ===================================-->

	<ResearchProjectDef>
		<defName>Bionics</defName>
		<label>bionics</label>
		<description>Advanced study of biomimetics and engineering. Unlocks bionic parts.</description>
		<baseCost>3500</baseCost>
		<techLevel>Spacer</techLevel>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<prerequisites>
			<li>SimpleProsthetics</li>
		</prerequisites>
		<researchViewX>8</researchViewX>
	</ResearchProjectDef>

	<!--=============================== Tier 2.5 ===================================-->

	<ResearchProjectDef>
		<defName>AdvancedBionics</defName>
		<label>advanced bionics</label>
		<description>Further study of bionics. Unlocks powerful bionic upgrades.</description>
		<baseCost>5000</baseCost>
		<techLevel>Spacer</techLevel>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<requiredResearchFacilities>
			<li>MultiAnalyzer</li>
		</requiredResearchFacilities>
		<prerequisites>
			<li>Bionics</li>
		</prerequisites>
		<researchViewX>11</researchViewX>
	</ResearchProjectDef>

	<ResearchProjectDef>
		<defName>SyntheticOrgans</defName>
		<label>synthetic organs</label>
		<description>Advanced research into nano-technology. Unlocks synthetic organs.</description>
		<baseCost>4500</baseCost>
		<techLevel>Spacer</techLevel>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<requiredResearchFacilities>
			<li>MultiAnalyzer</li>
		</requiredResearchFacilities>
		<prerequisites>
			<li>Bionics</li>
		</prerequisites>
		<researchViewX>9</researchViewX>
	</ResearchProjectDef>

	<ResearchProjectDef>
		<defName>Neuroscience</defName>
		<label>neuroscience</label>
		<description>Allows you to perform surgery on the brain and create advanced mechanites. Unlocks brain implants and luciferium suppressors.</description>
		<baseCost>3500</baseCost>
		<techLevel>Spacer</techLevel>
		<requiredResearchBuilding>HiTechResearchBench</requiredResearchBuilding>
		<requiredResearchFacilities>
			<li>MultiAnalyzer</li>
		</requiredResearchFacilities>
		<prerequisites>
			<li>Bionics</li>
		</prerequisites>
		<researchViewX>11</researchViewX>
	</ResearchProjectDef>

</ResearchProjectDefs>