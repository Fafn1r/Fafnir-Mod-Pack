<Buildings>
	
  <ThingDef Name="BuildingBase" Abstract="True">
    <category>Building</category>
    <thingClass>Building</thingClass>
    <soundImpactDefault>BulletImpactMetal</soundImpactDefault>
    <selectable>true</selectable>
    <drawerType>MapMeshAndRealTime</drawerType>
    <terrainAffordanceNeeded>Light</terrainAffordanceNeeded>
    <repairEffect>Repair</repairEffect>
    <leaveResourcesWhenKilled>true</leaveResourcesWhenKilled>
    <filthLeaving>BuildingRubble</filthLeaving>
  </ThingDef>
  
  <ThingDef Name="FurnitureBase" ParentName="BuildingBase" Abstract="True">
    <comps>
      <li>
        <compClass>CompQuality</compClass>
      </li>
    </comps>
    <DesignationCategory>Furniture</DesignationCategory>
    <minifiedDef>MinifiedFurniture</minifiedDef>
    <tradeTags>
      <li>Furniture</li>
    </tradeTags>
  </ThingDef>
  
  <ThingDef Name="ArtableFurnitureBase" ParentName="FurnitureBase" Abstract="True">
    <comps>
      <li Class="CompProperties_Art">
        <nameMaker>ArtName_Furniture</nameMaker>
        <descriptionMaker>ArtDescription_Furniture</descriptionMaker>
        <minQualityForArtistic>Excellent</minQualityForArtistic>
      </li>
    </comps>
    <inspectorTabs>
      <li>ITab_Art</li>
    </inspectorTabs>
  </ThingDef>

  <ThingDef ParentName="ArtableFurnitureBase">
    <defName>Bathtub</defName>
    <label>bathtub</label>
    <Description>A big tub that pawns can wash themselves in.</Description>
    <ThingClass>Hygiene.Building_Washer</ThingClass>
    <graphicData>
      <texPath>Things/Building/Furniture/Tub</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <shaderType>CutoutComplex</shaderType>
      <drawSize>(3,4)</drawSize>
      <damageData>
        <rect>(0,0.05,1,1.95)</rect>
      </damageData>
    </graphicData>
    <AltitudeLayer>Building</AltitudeLayer>
    <statBases>
      <MaxHitPoints>200</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>20</Beauty>
      <WorkToBuild>870</WorkToBuild>
      <Mass>50</Mass>
      <BathingEffectiveness>1</BathingEffectiveness>
      <Comfort>0.8</Comfort>
      <ImmunityGainSpeedFactor>1.5</ImmunityGainSpeedFactor>
    </statBases>
	<size>(1,2)</size>
	<rotatable>true</rotatable>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>35</costStuffCount>
    <comps>
		<li Class="CompProperties_RoomIdentifier">
			<roomStat>Impressiveness</roomStat>
		</li>
		<li Class="CompProperties_Forbiddable"/>
    </comps>
    <fillPercent>0.4</fillPercent>
    <PathCost>60</PathCost>
    <StaticSunShadowHeight>0.17</StaticSunShadowHeight>
    <CastEdgeShadows>True</CastEdgeShadows>
    <designationHotKey>Misc2</designationHotKey>
    <Passability>PassThroughOnly</Passability>
  </ThingDef>
  
  <ThingDef ParentName="FurnitureBase">
    <defName>Shower</defName>
    <label>shower</label>
    <Description>A shower with a built-in electric pump for your pawns to wash in, much faster to use than a bathtub.</Description>
    <ThingClass>Hygiene.Building_Washer</ThingClass>
    <size>(1,1)</size>
    <graphicData>
      <texPath>Things/Building/Furniture/Shower_front</texPath>
      <graphicClass>Graphic_Single</graphicClass>
	  <drawSize>(3,3)</drawSize>
    </graphicData>
    <AltitudeLayer>Building</AltitudeLayer>
    <fillPercent>0.5</fillPercent>
    <rotatable>false</rotatable>
    <statBases>
      <MaxHitPoints>140</MaxHitPoints>
      <Flammability>1.0</Flammability>
      <Beauty>8</Beauty>
      <WorkToBuild>1740</WorkToBuild>
      <Mass>25</Mass>
      <BathingEffectiveness>3</BathingEffectiveness>
      <Comfort>0.5</Comfort>
      <ImmunityGainSpeedFactor>1.5</ImmunityGainSpeedFactor>
    </statBases>
    <stuffCategories>
      <li>Metallic</li>
      <li>Stony</li>
    </stuffCategories>
    <costStuffCount>50</costStuffCount>
    <comps>
		<li Class="CompProperties_RoomIdentifier">
			<roomStat>Impressiveness</roomStat>
		</li>
		<li Class="CompProperties_Forbiddable"/>
		<li Class="CompProperties_Flickable"/>
		<li Class="CompProperties_Power">
			<compClass>CompPowerTrader</compClass>
			<basePowerConsumption>100</basePowerConsumption>
			<startElectricalFires>true</startElectricalFires>
			<shortCircuitInRain>false</shortCircuitInRain>
		</li>
    </comps>
    <PathCost>60</PathCost>
    <StaticSunShadowHeight>0.17</StaticSunShadowHeight>
    <CastEdgeShadows>True</CastEdgeShadows>
    <designationHotKey>Misc2</designationHotKey>
    <Passability>PassThroughOnly</Passability>
    <researchPrerequisites><li>Electricity</li></researchPrerequisites>
  </ThingDef>
</Buildings>