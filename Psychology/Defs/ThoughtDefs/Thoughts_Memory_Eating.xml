<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <!--=========== Special nature thoughts ============-->
  <ThoughtDef>
    <defName>AteLavishMealPickyEater</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <requiredTraits>
      <li>Gourmet</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate lavish meal</label>
        <description>That lavish meal was amazing. It's exactly what I want to eat every day!</description>
        <baseMoodEffect>12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>AteFineMealPickyEater</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>0.5</durationDays>
    <stackLimit>1</stackLimit>
    <requiredTraits>
      <li>Gourmet</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate fine meal</label>
        <description>I ate a really tasty fine meal. Just the way I like it!</description>
        <baseMoodEffect>6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>AteAwfulMealPickyEater</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>0.5</durationDays>
    <stackLimit>3</stackLimit>
    <requiredTraits>
      <li>Gourmet</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate awful meal</label>
        <description>I had to eat a disgusting, tasteless meal. Unacceptable. I expect to be fed better than that.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteRawFoodPickyEater</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>0.5</durationDays>
    <stackLimit>3</stackLimit>
    <requiredTraits>
      <li>Gourmet</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate raw food</label>
        <description>I had to eat raw food. I don't want to live here if we can't even have a chef.</description>
        <baseMoodEffect>-10</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteNormalMealPickyEater</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>0.5</durationDays>
    <stackLimit>3</stackLimit>
    <requiredTraits>
      <li>Gourmet</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate plain meal</label>
        <description>That meal wasn't really up to my standards. I only ate it because there was nothing better.</description>
        <baseMoodEffect>-3</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteInsectMeatAsIngredientPickyEater</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>0.5</durationDays>
    <stackLimit>3</stackLimit>
    <requiredTraits>
      <li>Gourmet</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate cooked insect meat</label>
        <description>I ate a meal cooked from gray, slimy insect meat. That was a deeply unpleasant surprise to bite into.</description>
        <baseMoodEffect>-6</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

  <ThoughtDef>
    <defName>AteInsectMeatDirectPickyEater</defName>
		<showBubble>true</showBubble>
		<icon>Things/Mote/ThoughtSymbol/Food</icon>
    <durationDays>0.5</durationDays>
    <stackLimit>3</stackLimit>
    <requiredTraits>
      <li>Gourmet</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate insect meat</label>
        <description>I ate some gray, slimy insect meat. Please kill me now.</description>
        <baseMoodEffect>-8</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>AteRottenFoodPickyEater</defName>
    <durationDays>1.0</durationDays>
    <stackLimit>1</stackLimit>
    <requiredTraits>
      <li>Gourmet</li>
    </requiredTraits>
    <stages>
      <li>
        <label>ate rotten food</label>
        <description>I ate some disgusting, putrid food. I would rather be dead than reduced to this.</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>

