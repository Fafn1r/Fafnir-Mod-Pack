<?xml version="1.0" encoding="utf-8" ?>
<ThoughtDefs>
  <ThoughtDef>
    <defName>ColonistLeftUnburiedBleedingHeart</defName>
    <workerClass>ThoughtWorker_ColonistLeftUnburied</workerClass>
    <requiredTraits>
      <li>BleedingHeart</li>
    </requiredTraits>
    <stages>
      <li>
        <label>colonist left unburied</label>
        <description>One of us died and we're just leaving them lying in the open. I can't stop thinking about it. How can we allow them to rot out there like that?</description>
        <baseMoodEffect>-15</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>NakedPrude</defName>
    <workerClass>ThoughtWorker_PsychologicallyNude</workerClass>
    <requiredTraits>
      <li>Prude</li>
    </requiredTraits>
    <stages>
      <li>
        <label>naked</label>
        <description>I'm naked. Everyone's staring at me! PLEASE GET ME SOME CLOTHES!</description>
        <baseMoodEffect>-20</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>WorkingPassion</defName>
    <workerClass>Psychology.ThoughtWorker_WorkingPassion</workerClass>
    <stages>
      <li>
        <label>working passionately</label>
        <description>I'm doing something I love!</description>
        <baseMoodEffect>2</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
  
  <ThoughtDef>
    <defName>PanicAttack</defName>
    <workerClass>Psychology.ThoughtWorker_PanicAttack</workerClass>
    <stages>
      <li>
        <label>having a panic attack</label>
        <description>Get away from me! I need to breathe!</description>
        <baseMoodEffect>-12</baseMoodEffect>
      </li>
    </stages>
  </ThoughtDef>
</ThoughtDefs>