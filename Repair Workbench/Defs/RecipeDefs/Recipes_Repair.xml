			<thingDefs>
				<li>Steel</li>
				<li>Cloth</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<RepairKit>10</RepairKit>
		</products>
		<recipeUsers>
			<li>TableMachining</li>
		</recipeUsers>
	</RecipeDef>
	
