<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<RecipeDef>
	<defName>Canmeal</defName>
	<label>can meal</label>
	<description>Preserve food in a can to prevent spoiling.</description>
	<jobString>Canning food.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
	<workAmount>1000</workAmount>
		<effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>          <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <categories>
            <li>FoodRaw</li>
          </categories>
        </filter>
        <count>5</count>
      </li>
	</ingredients>
	<fixedIngredientFilter>
	  <categories>
		<li>FoodRaw</li>
	  </categories>
      <disallowedSpecialFilters>
        <li>AllowPlantFood</li>
        <li>AllowRotten</li>
      </disallowedSpecialFilters>
	</fixedIngredientFilter>
	<products>
	  <MealCannedFood>7</MealCannedFood>
	</products>
    <defaultIngredientFilter>
      <categories>
        <li>FoodRaw</li>
      </categories>
      <exceptedCategories>
        <li>EggsFertilized</li>
      </exceptedCategories>
      <exceptedThingDefs>
        <li>Human_Meat</li>
      </exceptedThingDefs>
    </defaultIngredientFilter>
	<workSkill>Cooking</workSkill>
	<recipeUsers>
         <li>HandCanningstove</li>
         <li>Canningstove</li>
     </recipeUsers>
</RecipeDef>

