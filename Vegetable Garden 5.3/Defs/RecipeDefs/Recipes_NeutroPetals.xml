<?xml version="1.0" encoding="utf-8" ?>
<RecipeDefs>

	<RecipeDef>
		<defName>VG_Neutroamine</defName>
		<label>make neutroamine</label>
		<description>Make Neutroamine from neutroflower petals.</description>
		<jobString>Crafting Neutroamine.</jobString>
      <workSpeedStat>DrugProductionSpeed</workSpeedStat>
      <workSkill>Medicine</workSkill>
		<workAmount>700</workAmount>
		<ingredients>
			<li>
				<filter>
					<thingDefs>
						<li>NeutroPetals</li>
					</thingDefs>
				</filter>
				<count>10</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<thingDefs>
				<li>NeutroPetals</li>
			</thingDefs>
		</fixedIngredientFilter>
		<products>
			<Neutroamine>1</Neutroamine>
		</products>
      <skillRequirements>
        <li>
          <skill>Medicine</skill>
          <minLevel>6</minLevel>
        </li>
        <li>
          <skill>Crafting</skill>
          <minLevel>3</minLevel>
        </li>
      </skillRequirements>
      <recipeUsers>
        <li>DrugLab</li>
      </recipeUsers>
	</RecipeDef>

	<RecipeDef>
		<defName>VG_BulkNeutroamine</defName>
