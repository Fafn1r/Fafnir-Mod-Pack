<RecipeDef>
	<defName>PickleVegetable</defName>
	<label>pickle ten vegetables</label>
	<description>Preserve vegetables in a salty brine to prevent spoiling.</description>
	<jobString>Pickling food.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
	<workAmount>1000</workAmount>
		<effectWorking>Cook</effectWorking>
    <soundWorking>Recipe_CookMeal</soundWorking>          <allowMixingIngredients>true</allowMixingIngredients>
    <ingredientValueGetterClass>IngredientValueGetter_Nutrition</ingredientValueGetterClass>
    <ingredients>
      <li>
        <filter>
          <thingDefs>
            <li>RawPotatoes</li>
            <li>RawCorn</li>
            <li>Rawsnowbeet</li>
            <li>Raweggplant</li>
            <li>Rawpumpkin</li>
            <li>Rawsquash</li>
            <li>Rawbean</li>
            <li>RawTomatoes</li>
            <li>RawCarrots</li>
          </thingDefs>
        </filter>
        <count>2</count>
      </li>
	<li>
	  <filter>
		<thingDefs>
			<li>ChunkSalt</li>
		</thingDefs>
	  </filter>
		<count>0.03</count>
	</li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
            <li>RawPotatoes</li>
            <li>RawCorn</li>
            <li>Rawsnowbeet</li>
            <li>Raweggplant</li>
            <li>Rawpumpkin</li>
            <li>Rawsquash</li>
            <li>Rawbean</li>
            <li>RawTomatoes</li>
            <li>RawCarrots</li>
		 <li>ChunkSalt</li>
	  </thingDefs>
      <disallowedSpecialFilters>
        <li>AllowPlantFood</li>
        <li>AllowNonSmeltableWeapons</li>
	   <li>AllowRotten</li>
      </disallowedSpecialFilters>
	</fixedIngredientFilter>
	<products>
	  <PickledVeg>10</PickledVeg>
	</products>
    <defaultIngredientFilter>
      <thingDefs>
            <li>RawPotatoes</li>
            <li>RawCorn</li>
            <li>Rawsnowbeet</li>
            <li>Raweggplant</li>
            <li>Rawpumpkin</li>
            <li>Rawsquash</li>
            <li>Rawbean</li>
            <li>RawTomatoes</li>
            <li>RawCarrots</li>
    		  <li>ChunkSalt</li>
       </thingDefs>
      <exceptedCategories>
        <li>EggsFertilized</li>
    </exceptedCategories>
      <exceptedThingDefs>
        <li>PickledVeg</li>
      </exceptedThingDefs>
    </defaultIngredientFilter>
	<workSkill>Cooking</workSkill>
	<recipeUsers>
         <li>Canningstove</li>
         <li>HandCanningstove</li>
     </recipeUsers>
</RecipeDef>

