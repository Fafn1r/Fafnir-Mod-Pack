   <RecipeDef>
	<defName>MakeHardcandy</defName>
	<label>make four hard candies</label>
	<description>Turn sugar into a sweet hard candy.</description>
	<jobString>Making candy.</jobString>
	<workSpeedStat>CookSpeed</workSpeedStat>
		<effectWorking>Cook</effectWorking>
<workAmount>900</workAmount>
    <soundWorking>Recipe_CookMeal</soundWorking>          <allowMixingIngredients>true</allowMixingIngredients>
	
	<ingredients>
	  <li>
	    <filter>
	      <thingDefs>
	        <li>Sugar</li>
	      </thingDefs>
	    </filter>
	    <count>10</count>
	  </li>
	</ingredients>
	<fixedIngredientFilter>
	  <thingDefs>
	    <li>Sugar</li>
	  </thingDefs>
      <specialFiltersToDisallow>
        <li>AllowRotten</li>
      </specialFiltersToDisallow>
	</fixedIngredientFilter>
	<products>
	  <Hardcandy>4</Hardcandy>
	</products>
	<workSkill>Cooking</workSkill>
</RecipeDef>
  
