<?xml version="1.0" encoding="utf-8" ?>
<Plants>
  <!--=========================== Crops ==============================-->

  

  <ThingDef ParentName="VG_PlantBase">
    <defName>PlantTobacco</defName>
    <label>tobacco plant</label>
    <description>A green, leafy member of the nighshade family. Harvests quickly. Demanding to grow, but an enjoyable crop.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>1</Beauty>
    </statBases>
    <graphicData>
    <texPath>Things/Plants/TobaccoPlant</texPath><graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <selectable>true</selectable>
    <pathCost>12</pathCost>
    <ingestible>
      <foodType>Plant</foodType>
      <preferability>NeverForNutrition</preferability>
      <nutrition>0.05</nutrition>
    </ingestible>
    <plant>
      <dieIfLeafless>true</dieIfLeafless>
      <harvestTag>Standard</harvestTag>
      <harvestedThingDef>RawTobacco</harvestedThingDef>
      <harvestDestroys>true</harvestDestroys>
      <harvestYield>10</harvestYield>
      <sowTags>
        <li>Ground</li>
        <li>Hydroponic</li>
      </sowTags>
      <topWindExposure>0.15</topWindExposure>
      <growDays>10</growDays>
      <fertilitySensitivity>1</fertilitySensitivity>
      <visualSizeRange>
        <min>0.3</min>
        <max>1.05</max>
      </visualSizeRange>
    </plant>
  </ThingDef>




</Plants>