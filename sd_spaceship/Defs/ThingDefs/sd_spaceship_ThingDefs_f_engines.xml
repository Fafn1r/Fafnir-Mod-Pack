<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--================================ engine 1x2 ======================================--> 

  <ThingDef ParentName="sd_spaceship_shippart_Base">
    <defName>sd_spaceship_1x2engine</defName>
    <label>ship small engine</label>
    <thingClass>Building</thingClass>
    <graphicData>
      <texPath>sd_spaceship/engines/sd_spaceship_engine1x2</texPath>
      <graphicClass>Graphic_Single</graphicClass>
      <drawSize>(1,2)</drawSize>
    </graphicData>
    <researchPrerequisites>
		<li>ShipEngine</li>
	</researchPrerequisites>
    <statBases>
      <WorkToBuild>15000</WorkToBuild>
      <MaxHitPoints>200</MaxHitPoints>
	  <Mass>2000</Mass>
      <Flammability>1.0</Flammability>
    </statBases>
    <tickerType>Normal</tickerType>
    <description>An antimatter-powered engine capable of launching a ship into orbit and on interstellar trajectories.</description>
    <size>(1,2)</size>
    <comps>
      <li Class="CompProperties_Power">
        <compClass>CompPowerTransmitter</compClass>
        <transmitsPower>true</transmitsPower>
      </li>
      <li Class="CompProperties_ShipPart"/>
    </comps>
    <costList>
      <Steel>100</Steel>
      <Plasteel>100</Plasteel>
	  <Uranium>30</Uranium>
      <Component>8</Component>
    </costList>
    <terrainAffordanceNeeded>Heavy</terrainAffordanceNeeded>
    <staticSunShadowHeight>1.0</staticSunShadowHeight>
    <designationHotkey>Misc5</designationHotkey>
	<selectable>true</selectable>
	<rotatable>true</rotatable>
  </ThingDef>

</Defs>